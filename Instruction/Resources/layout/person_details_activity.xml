<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearName">
        <TextView
        android:text="Name"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_name_header" />
        <TextView
        android:text="Name"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_name" />
        
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearSurname">
        <TextView
        android:text="Surname"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_surnamename_header" />
        <TextView
        android:text="Surnme"
        android:textSize="75px"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_surname" />
        
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearAge">
        <TextView
        android:text="Age"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_age_header" />
        <TextView
        android:text="Age"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_age" />
        
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearGender">
        <TextView
        android:text="Gender"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_gender_header" />
        <TextView
        android:text="Gender"
        android:textSize="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txt_gender" />
        
    </LinearLayout>


</LinearLayout>
